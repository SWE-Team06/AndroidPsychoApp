<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Mit wie vielen Interaktionspartnern hatten Sie seit dem letzten gestrigen Signal um 23:00 Uhr Kontakt? Schätzen Sie bitte  zusätzlich die Gesamtdauer der Kontakte ein."
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="5"
            android:id="@+id/anzahl"
            android:hint="Anzahl"
            android:enabled="true"
            android:layout_above="@+id/button"
            android:layout_toLeftOf="@+id/hours"
            android:editable="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="5"
            android:id="@+id/hours"
            android:hint="Stunden"
            android:layout_below="@+id/editText"
            android:layout_alignRight="@+id/button"
            android:editable="true"
            android:enabled="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="5"
            android:id="@+id/minutes"
            android:hint="Minuten"
            android:enabled="true"
            android:layout_below="@+id/editText"
            android:layout_toRightOf="@+id/hours"
            android:editable="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speichern"
            android:id="@+id/button"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/hours"
            android:layout_centerHorizontal="true"
            android:onClick="click"/>

</RelativeLayout>